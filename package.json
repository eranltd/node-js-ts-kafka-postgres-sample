{
  "name": "node-js-typescript-kafka",
  "version": "1.0.0",
  "description": "Sample Node.JS & Kafka for learning how to...",
  "main": "build/index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon -r dotenv/config --watch  'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "postversion": "git push --tags && git push --all",
    "build": "tsc -p .",
    "clean": "rm -r build",
    "prestart": "npm run clean && npm run build",
    "test": "NODE_ENV=development jest --setupFiles dotenv/config",
    "start": "node -r dotenv/config build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eranltd/node-js-typescript-kafka"
  },
  "author": "Eran Peled",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eranltd/node-js-typescript-kafka/issues"
  },
  "homepage": "https://github.com/eranltd/node-js-typescript-kafka#readme",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)": "<rootDir>/$1"
    }
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "body-parser": "^1.19.0",
    "config": "^3.3.6",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "express-validator": "^6.11.1",
    "fs": "0.0.1-security",
    "kafkajs": "^2.1.0",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/morgan": "^1.9.2",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
